{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "#app": [".nuxt/types/app"],
      "#imports": [".nuxt/imports"]
    }
  },
  "include": [
    "nuxt.config.ts",
    "plugins/**/*",
    ".nuxt/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules"]
}